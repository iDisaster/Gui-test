-- create a new window
local window = gui.create_window()

-- set the window title
window:set_title("My Roblox GUI")

-- create a label and add it to the window
local label = gui.create_label("Hello, Roblox!")
window:add(label)

-- create a button and add it to the window
local button = gui.create_button("Click me!")
window:add(button)

-- show the window
window:show()

-- handle button clicks
button.on_click = function()
  print("Button was clicked!")
  
  -- enable flying
  game.players.local_player.character:set_fly_enabled(true)
end
